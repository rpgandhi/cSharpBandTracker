@{
  Layout = "_Layout";
}

<h1>Venue List</h1>
<hr />
<h2>Venues:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var venue in Model)
    {
      <li><a href="/venues/@venue.GetVenueId()">@venue.GetVenueName()</a></li>
    }
  </ul>
}
@if (Model.Count == 0)
{
  <h3 class="red">There have been no venues added yet</h3>
}
<br>
<h4><a href="/venues/new">Add a new venue</a></h4>
<br>
<h4><a href="/">Home</a></h4>
